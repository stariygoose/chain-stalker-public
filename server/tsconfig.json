{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
		"moduleResolution": "nodenext",

		"paths": {
			"#*": ["./src/*"]
		},
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",

		"types": [
			"node",
			"jest"
		],

		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,

		"experimentalDecorators": true,  
    "emitDecoratorMetadata": true
  },
	"include": ["src/**/*", "src/utils", "src/server.ts", "src/__tests__", "src/application", "src/presentation", "src/infrastructure", "src/di", "src/core", "src/config"],
	"exclude": ["dist", "node_modules"],
}
