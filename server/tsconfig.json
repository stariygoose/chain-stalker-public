{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist/",
    "rootDir": "./src/",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		"paths": {
			"@/*": ["./src/*",]
		}
  }
}
