{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",

		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"paths": {  
			"#*": ["./src/v1/*"]  
		},

		"types": [
			"node",
			"jest"
		],

		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
  },
	"include": ["src/v1/**/*"],
	"exclude": ["dist", "node_modules"],
}
