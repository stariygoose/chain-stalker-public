{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
		"moduleResolution": "nodenext",

		"paths": {
			"#*": ["./src/v1/*"]
		},
		// "customConditions": ["cs-dev"],
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",

		"types": [
			"node",
			"jest"
		],

		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true
  },
	"include": ["src/v1/**/*"],
	"exclude": ["dist", "node_modules"],
}
